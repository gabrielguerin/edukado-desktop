<%# Badges %>
<% %w[gold silver bronze].each do |difficulty| %>
  <div class="d-flex align-items-center" data-placement="bottom" data-toggle="tooltip" data-original-title="<%= "#{(user.badges.select { |badge| badge.custom_fields[:difficulty].match?(difficulty) }).count} " "#{t "merit.badge", count: (user.badges.select { |badge| badge.custom_fields[:difficulty].match?(difficulty) }).count}"  %> <%= t("merit.difficulty.#{difficulty}") %>">
    <% if difficulty.match?('gold') %>
      <span style="color: #F2CA50; margin-right: 0.250rem;">•</span>
    <% elsif difficulty.match?('silver') %>
      <span style="color: #BFBFBF; margin-right: 0.250rem;">•</span>
    <% else %>
      <span style="color: #A66641; margin-right: 0.250rem;">•</span>
    <% end %>
    <%= content_tag(block_tag, "#{(user.badges.select { |badge| badge.custom_fields[:difficulty].match?(difficulty) }).count}", class: 'text-muted my-0') %>
  </div>
<% end %>
