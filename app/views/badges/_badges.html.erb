<%# Badges %>
<div class="card">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-hover table-sm-responsive">
        <thead>
          <tr>
            <th>Badge</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <% @badges.each do |badge| %>
            <tr>
              <%= render partial: 'badge-list', locals: { badge: badge } %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
