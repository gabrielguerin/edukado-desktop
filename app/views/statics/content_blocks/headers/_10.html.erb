<header class="landing-header-1 d-flex flex-column">
  <div class="container header-caption align-items-center"  style="flex: 1">
    <div class="row">
      <div class="col-12 px-5">
        <div class="text-center">
          <h1 class="font-weight-bold leading-tight">Trouvez des
            <div class="my-5">
              <span id="typed"></span>
            </div>
            <script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.11"></script>
            <script>
              var options = {
                strings: ['exercices^1000', 'fiches de révision^1000', 'présentations^1000', 'notes de cours^1000', 'corrigés^1000'],
                typeSpeed: 60,
                backSpeed: 30,
                loop: true
              }
              var typed = new Typed("#typed", options);
            </script>
          </h1>
          <div class="pt-5">
            <%= render partial: 'search/form', locals: { search_path: posts_path, placeholder: 'Dissertation Guerre Froide, Fiches Droit des sociétés, Exercices isométriques…' } %>
            <% @search_path = posts_path %>
          </div>
          <div>
            <p class="">Des milliers de ressources universitaires de qualité, crées par des étudiants & accessibles gratuitement !</p>
            <%= link_to "Accéder aux contenus", new_user_registration_path, class: "btn btn-lg btn-primary mt-4" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
