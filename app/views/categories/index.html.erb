<% @title = "Listing categories" %>

<% content_for :description do %>
  <p>Edit this template in <code>app/views/Categories/index.html.erb</code>.</p>
  <% end %>

  <% content_for :actions do %>
    <%= link_to new_category_path, class: 'btn btn-primary btn-large pull-right' do %>
      <%= fa_icon_tag "plus" %> Add Category
      <% end %>
      <% end %>

      <div class="container">
        <div class="row">
          <div class="col-md-9">
            <div class="card card-sheet sheet-condensed">
              <table class="table table-striped table-hover table-sm-responsive">
                <thead>
                  <tr>
                                          <th>Name</th>
                                        <th></th>
                  </tr>
                </thead>
                <tbody>
                <% @categories.each do |category| %>
                  <tr>
                                          <td><%= category.name %></td>
                                        <td class="actions text-right">
                      <div class="btn-group">
                        <%= link_to theme_icon_tag("eye"), category, 'data-toggle': 'tooltip', title: 'Show', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("pencil-alt"), edit_category_path(category), 'data-toggle': 'tooltip', title: 'Edit', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("trash"), category, 'data-toggle': 'tooltip', title: 'Delete',
                        data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-link' %>
                      </div>
                      </td>
                    </tr>
                    <% end %>
                    <% if @categories.length == 0 %>
                    <tr><td colspan=42 class='text-center'>No categories.</td></tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>

                
                                  <%# Remove the trailing if condition if you're using pagination. %>
                  <%= paginate @categories if @categories.respond_to?(:current_page) %>
                              </div>


              <div id="sidebar" class="col-md-3">

                <ul class="nav nav-stacked nav-caret-left bg-gray-200 card small pb-2">
                  <li><h6 class="mt-3 ml-3">Sub Menu</h6></li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Vacation Days</a>
                  </li>
                  <li class="nav-item active">
                  <a class="nav-link" href="#">Salaries</a>
                  </li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Disciplinary Items</a>
                  </li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Firings</a>
                  </li>
                </ul>
              </div> <!-- /#sidebar -->
            </div>
          </div>
