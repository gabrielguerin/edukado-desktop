<% @title = @group.name %>
<%# content_for :description do
  <p>Edit this template in <code>app/views/Groups/show.html.erb</code>.</p>
end %>
<div class="container">
  <div class="row">
    <div class="card">
      <%= form_tag(group_path(@group), method: 'get', class: 'input-group input-group-lg', role: 'search') do %>
        <%# Search field %>
        <%= text_field_tag :search, nil, placeholder: "Recherchez un cours dans cette université et trouvez du contenu à ce sujet.", class: "form-control border-0", name: "search", autocomplete: :off%>
        <%# Submit button %>
        <%= submit_tag '', style: "display: none;" %>
      <% end %>
    </div>
    <div class="col-12">
      <%# Breadcrumb %>
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <%= link_to 'Universités', groups_path %>
        </li>
        <li class="breadcrumb-item">
          <%= link_to "#{@group.name}", group_path(@group) %>
        </li>
      </ol>
      <%# Statistics %>
      <div class="d-flex flex-row justify-content-between">
        <div class="card card-mini mx-1">
          <div class="card-body">
            <h6 class="m-0 pt-2 text-muted text-wrap">Nombre de documents</h6>
            <h4 class="m-0 counter"><%= @group.posts.count %></h4>
          </div>
        </div>
        <% Category.all.sample(5).each do |category| %>
          <div class="card card-mini mx-1">
            <div class="card-body">
              <h6 class="m-0 pt-2 text-muted text-wrap"><%= category.name %></h6>
              <h4 class="m-0 counter"><%= category.posts.where(group: @group).count %></h4>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <%# List of posts %>
    <div class="card">
      <%# Card header %>
      <div class="card-header">
        <%# Render group's posts %>
        <% if @search.present? %>
          <h6 class="card-title">Vous avez recherché : <i><%= @search %></i></h6>
        <% else %>
          <h6 class="card-title">Publications les plus populaires</h6>
        <% end %>
      </div>
      <table class="table table-hover inspectable">
        <tbody>
          <% if @search.present? %>
            <% @posts.each do |post| %>
              <%= render partial: 'posts/post-list_item', locals: { post: post } %>
            <% end %>
          <% else %>
            <% @posts.each do |post| %>
              <%= render partial: 'posts/post-list_item', locals: { post: post } %>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% if @group.posts.count > 20 %>
  <%# Pagination %>
  <%= render partial: 'kaminari/pagination', locals: { object: @posts, ajax: 'local' } %>
<% end %>
</div>
<%# Clickable table row element %>
<script>
  $("tr[data-link]").click(function() {
    window.location = $(this).data("link")
  })
</script>
