<% if user_signed_in? %>
  <%# Like comment %>
  <% if current_user.liked? comment %>
    <%# User liked comment %>
    <%= link_to unlike_post_comment_path(comment.post, comment), remote: true, id: "like_comment_#{comment.id}", class: 'btn btn-light border-bottom text-success', style: 'font-size: 16px;' do %>
      <div class="d-flex justify-content-center align-items-center">
        <%= theme_icon_tag('arrow-up') %>
        <%# Like count %>
        <%= content_tag(:div, "Vote positif · #{comment.likes_sum}", class: 'ml-2', id: "like_count_#{comment.id}") %>
      </div>
    <% end %>
  <% else %>
    <%# User did not like comment %>
    <%= link_to like_post_comment_path(comment.post, comment), remote: true, id: "like_comment_#{comment.id}", class: 'btn btn-light border-bottom', style: 'font-size: 16px;' do %>
      <div class="d-flex justify-content-center align-items-center">
        <%= theme_icon_tag('arrow-up') %>
        <%# Like count %>
        <%= content_tag(:div, "Vote positif · #{comment.likes_sum}", class: 'ml-2', id: "like_count_#{comment.id}") %>
      </div>
    <% end %>
  <% end %>
  <%# Dislike comment %>
  <% if current_user.disliked? comment %>
    <%# User disliked comment %>
    <%= link_to undislike_post_comment_path(comment.post, comment), remote: true, id: "dislike_comment_#{comment.id}", class: 'btn btn-light border-bottom text-danger', style: 'font-size: 16px;' do %>
      <div class="d-flex justify-content-center align-items-center">
        <%= theme_icon_tag('arrow-down') %>
        <%# Dislike count %>
        <%= content_tag(:div, "Vote négatif · #{comment.dislikes_sum}", class: 'ml-2', id: "dislike_count_#{comment.id}") %>
      </div>
    <% end %>
  <% else %>
    <%# User did not dislike comment %>
    <%= link_to dislike_post_comment_path(comment.post, comment), remote: true, id: "dislike_comment_#{comment.id}", class: 'btn btn-light border-bottom', style: 'font-size: 16px;' do %>
      <div class="d-flex justify-content-center align-items-center">
        <%= theme_icon_tag('arrow-down') %>
        <%# Dislike count %>
        <%= content_tag(:div, "Vote négatif · #{comment.dislikes_sum}", class: 'ml-2', id: "dislike_count_#{comment.id}") %>
      </div>
    <% end %>
  <% end %>
  <%# User is not signed in %>
<% else %>
  <%# Like comment %>
  <%= link_to like_post_comment_path(comment.post, comment), remote: true, id: "like_comment_#{comment.id}", class: 'btn btn-light border-bottom disabled', style: 'font-size: 16px;' do %>
    <div class="d-flex justify-content-center align-items-center">
      <%= theme_icon_tag('arrow-up') %>
      <%# Like count %>
      <%= content_tag(:div, "Vote positif · #{comment.likes_sum}", class: 'ml-2', id: "like_count_#{comment.id}") %>
    </div>
  <% end %>
  <%# Dislike comment %>
  <%= link_to dislike_post_comment_path(comment.post, comment), remote: true, id: "dislike_comment_#{comment.id}", class: 'btn btn-light border-bottom disabled', style: 'font-size: 16px;', method: :put do %>
    <div class="d-flex justify-content-center align-items-center">
      <%= theme_icon_tag('arrow-down') %>
      <%# Dislike count %>
      <%= content_tag(:div, "Vote négatif · #{comment.dislikes_sum}", class: 'ml-2', id: "dislike_count_#{comment.id}") %>
    </div>
  <% end %>
<% end %>
