<% @title = "Vos badges" %>
<% if current_user.badges.present? %>
  <div class="card">
    <div class="card-body">
      <table class="table table-striped table-hover table-sm-responsive">
        <thead>
          <tr>
            <th>Ic√¥ne</th>
            <th>Nom</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <% current_user.badges.each do |badge| %>
            <tr>
              <%= render partial: 'badges/badge-list', locals: { badge: badge } %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <div class="card">
    <div class="card-body text-center">
      <p>Vous n'avez pas encore obtenu de badges.</p>
    </div>
  </div>
<% end %>
