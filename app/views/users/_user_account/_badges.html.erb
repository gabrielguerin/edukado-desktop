<% @title = "Vos badges" %>
<% if current_user.badges.present? %>
  <div class="card">
    <div class="card-body">
      <table class="table table-striped table-hover table-sm-responsive">
        <thead>
          <tr>
            <th>Badge</th>
            <th>Description</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <%# Badges %>
          <% current_user.sash.badges_sashes.each do |badge_sash| %>
            <tr>
              <td>
                <%= render partial: 'badges/badge', locals: { badge: badge_sash.badge } %>
              </td>
              <td>
                <%= badge_sash.badge.description %>
              </td>
              <td>
                Obtenu le <%= I18n.localize((badge_sash.created_at), format: "%-d %B %Y") %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <div class="card">
    <div class="card-body text-center">
      <p>Vous n'avez pas encore obtenu de badges.</p>
    </div>
  </div>
<% end %>
