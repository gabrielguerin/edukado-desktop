<li>
  <div class="card p-3 mb-0">
    <h2 class="leading-normal mb-3"><%= link_to blog.title, blog_path(blog) %></h2>
    <p><%= truncate(blog.description, length: 150) %></p>
    <div class="article-meta color-grey-50">
      <%= image_tag(blog.user.avatar, class: "d-flex rounded mr-3", width: '40', height: '40', alt: 'profile picture') %>
      <div class="media-body d-flex align-items-center">
        <p class="m-0 media-heading"><a href="<%= posts_user_path(blog.user) %>">Par <%= blog.user.first_name %> <%= blog.user.last_name %></a> &bull; <time>Publi√© le <%= l(blog.updated_at.to_time, format: "%-d %B %Y") %></time></p>
      </div>
    </div>
    <div class="pt-2">
      <a href="<%= blog_path(blog) %>">Lire l'article &rarr;</a>
    </div>
  </div>
</li>
