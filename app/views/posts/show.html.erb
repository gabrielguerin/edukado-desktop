<% @title = "#{@post.title}" %>
<div class="container">
  <div class="row">
    <div class="col-md-9">
      <table class="table table-striped table-hover table-sm-responsive">
        <tbody>
          <%= render partial: 'post', locals: {post: @post} %>
        </tbody>
      </table>
    </div>
    <div id="sidebar" class="col-lg-3 col-md-4 order-md-2 order-sm-1">
      <%= render 'users/side_panel', locals: {user: @user} %>
      <%= render partial: 'badges/side_panel' %>
    </div>
  </div>
</div>
