<% @title = "DerniÃ¨res publications" %>
<div class="container">
  <div class="row">
    <% if user_signed_in? %>
      <div class="col-lg-9 col-md-12 col-sm-12">
        <div class="d-flex justify-content-center mb-4" id="new-post">
          <%# New post button %>
          <%= link_to new_post_path, class: 'btn btn-primary btn-large pull-right', remote: true do %>
            <%= fa_icon_tag "plus" %> Ajouter une publication
          <% end %>
        </div>
      </div>
    <% end %>
    <div class="col-lg-9 col-md-12 col-sm-12">
      <% if @posts.present? %>
        <%# Posts %>
        <div id="posts">
          <%= render @posts %>
        </div>
        <% if @posts_size > 20 %>
          <%# Pagination %>
          <div class="card">
            <div class="card-body d-flex justify-content-center" id="paginate">
              <%= paginate @posts, remote: true %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="card">
          <div class="card-body text-center">
            <p>Il n'y a pas encore eu de publications.</p>
          </div>
        </div>
      <% end %>
    </div>
    <%# Side panel %>
    <div id="sidebar" class="col-lg-3 col-md-12 col-sm-12 order-md-2 order-sm-1">
      <%= render partial: 'side_panel' %>
    </div>
  </div>
</div>
