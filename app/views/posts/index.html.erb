<% @title = "DerniÃ¨res publications" %>
<div class="container">
  <div class="row">
    <div class="col-lg-9 col-md-12 col-sm-12">
      <% if @posts.present? %>
        <%# Posts %>
        <div id="posts">
          <%= render @posts %>
        </div>
        <%# Pagination %>
        <% if @posts.count > 20 %>
          <%= render partial: 'kaminari/pagination', locals: { object: @posts, ajax: 'remote' } %>
        <% end %>
      <% else %>
        <div class="card">
          <div class="card-body text-center">
            <p>Il n'y a pas encore eu de publications.</p>
          </div>
        </div>
      <% end %>
    </div>
    <%# Side panel %>
    <div id="sidebar" class="col-lg-3 col-md-12 col-sm-12 order-md-2 order-sm-1">
      <%= render partial: 'side_panel' %>
    </div>
  </div>
</div>
