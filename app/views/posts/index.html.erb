<% @title = "Dernières publications" %>
<div class="container">
  <div class="row">
    <div class="card">
      <%= form_tag(posts_path, method: 'get', class: 'input-group input-group-lg', role: 'search') do %>
        <%# Search field %>
        <%= text_field_tag :search, nil, placeholder: "Recherchez un fichier et trouvez du contenu à ce sujet.", class: "form-control border-0", name: "search", autocomplete: :off%>
        <%# Submit button %>
        <%= submit_tag '', style: "display: none;" %>
      <% end %>
    </div>
    <div class="col-12">
      <%# Tabs %>
      <%# Card %>
      <div class="card">
        <%# Card header %>
        <div class="card-header">
          <% if @search.present? %>
            <h6 class="card-title">Vous avez recherché : <i><%= @search %></i></h6>
          <% else %>
            <h6 class="card-title">Trouver votre fichier</i></h6>
        <% end %>
        <ul class="nav nav-tabs nav-tabs-primary card-header-tabs" id="navTab1" role="tablist">
          <li class="nav-item">
            <a href="#profile" data-toggle="tab" class="nav-link">Populaires</a>
          </li>
          <li class="nav-item">
            <a href="#badges" data-toggle="tab" class="nav-link">Matières</a>
          </li>
          <li class="nav-item">
            <a href="#support" data-toggle="tab" class="nav-link">Année</a>
          </li>
        </ul>
      </div>
      <table class="table table-hover inspectable">
        <tbody>
          <%# Render posts %>
          <% if @search.present? %>
            <% @posts.each do |post| %>
              <%= render partial: 'posts/post-list_item', locals: { post: post } %>
            <% end %>
          <% else %>
            <% @posts.each do |post| %>
              <%= render partial: 'posts/post-list_item', locals: { post: post } %>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% if @posts.count >= 20 %>
  <%# Pagination %>
  <%= render partial: 'kaminari/pagination', locals: { object: @posts, ajax: 'local' } %>
<% end %>
</div>
<%# Clickable table row element %>
<script>
  $("tr[data-link]").click(function() {
    window.location = $(this).data("link")
  })
</script>
