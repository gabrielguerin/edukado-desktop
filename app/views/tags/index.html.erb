<% @title = "Tags" %>
<div class="container">
  <div class="row">
    <%# Search form %>
    <%= render partial: 'search/form', locals: { search_path: tags_path, placeholder: "Recherchez le tag qui vous intéresse." } %>
    <div class="col-12">
      <%# Breadcrumb %>
      <ol class="breadcrumb">
        <li class="breadcrumb-item <%= 'active' if current_page?(groups_path) %>">
          <%= link_to 'Tags', tags_path %>
        </li>
      </ol>
      <%# Card %>
      <div class="card">
        <%# Card header %>
        <div class="card-header d-flex align-items-center">
          <% if @search.present? %>
            <h6 class="card-title">Vous avez recherché : <i><%= @search %></i></h6>
          <% else %>
            <h6 class="card-title">Trouver le tag qui vous intéresse</i></h6>
        <% end %>
      </div>
      <table class="table table-hover">
        <tbody>
          <%# Render tags %>
          <% @tags.each do |tag| %>
            <%= render partial: 'table/tr-object', locals: { attribute: tag.title, icon: 'tag', path: tag_path(tag) } %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%# Pagination %>
  <%= render partial: 'kaminari/pagination', locals: { object: @tags, ajax: 'local' } %>
</div>
<%# Clickable table row element %>
<script>
  $("tr[data-link]").click(function() {
    window.location = $(this).data("link")
  })
</script>
