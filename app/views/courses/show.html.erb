<% @title = @course.name %>
<%# content_for :description do
  <p>Edit this template in <code>app/views/Groups/show.html.erb</code>.</p>
end %>
<div class="container">
  <div class="row">
    <%# Search form %>
    <% @search_path = course_path(@course) %>
    <% @search_placeholder = "Recherchez un cours dans cette matière et trouvez du contenu à ce sujet." %>
    <div class="col-12">
      <%# Breadcrumb %>
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <%= link_to 'Cours', courses_path %>
        </li>
        <li class="breadcrumb-item">
          <%= link_to @course.name, course_path(@course) %>
        </li>
      </ol>
      <%# Card %>
      <div class="card">
        <%# Card header %>
        <div class="card-header">
          <%# Render course's posts %>
          <% if @search.present? %>
            <h6 class="card-title">Vous avez recherché : <i><%= @search %></i></h6>
          <% else %>
            <h6 class="card-title">Publications les plus populaires</h6>
          <% end %>
        </div>
        <div class="table-responsive">
          <table class="table table-hover">
            <tbody>
              <% if @search.present? %>
                <% @posts.each do |post| %>
                  <%= render partial: 'tables/tr-post', locals: { post: post } %>
                <% end %>
              <% else %>
                <% @posts.each do |post| %>
                  <%= render partial: 'tables/tr-post', locals: { post: post } %>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <%# Pagination %>
  <%= render partial: 'kaminari/pagination', locals: { object: @posts, ajax: 'local', model: @course.posts } %>
</div>
