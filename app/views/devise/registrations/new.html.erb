<% @title = 'Inscription' %>
<main class="landing-5">
  <%= render partial: 'layouts/statics_nav' %>
</main>
<div class="col-12 col-md-6 mr-auto ml-auto mt-5">
  <div class="card">
    <div class="card-body">
      <div class="container">
        <%= form_for resource, as: resource_name, url: registration_path(resource_name),
          html: { class: "form-horizontal", novalidate: true, multipart: true } do |f| %>
          <%= f.error_notification %>
          <%= f.form_group :first_name, class: "row" do |f| %>
            <%= f.label 'PrÃ©nom', class: "form-label" %>
            <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
            <%= f.error_messages %>
          <% end %>
          <%= f.form_group :last_name, class: "row" do |f| %>
            <%= f.label 'Nom', class: "form-label" %>
            <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
            <%= f.error_messages %>
          <% end %>
          <%= f.form_group :email, class: "row" do |f| %>
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
            <%= f.error_messages %>
          <% end %>
          <%= f.form_group :password, class: "row" do |f| %>
            <%= f.label 'Mot de passe', class: "form-label" %>
            <%= f.password_field :password, class: "form-control" %>
            <%= f.error_messages %>
          <% end %>
          <%= f.form_group :password_confirmation, class: "row" do |f| %>
            <%= f.label 'Confirmer le mot de passe', class: "form-label" %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
            <%= f.error_messages %>
          <% end %>
          <div class="row d-flex align-items-center mt-5">
            <%= link_to "Se connecter", new_session_path(resource_name) %>
            <%= f.submit "S'inscrire", class: "btn btn-primary ml-auto" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
