<% @title = 'Connexion' %>
<div class="d-flex flex-column flex-align-center p-5 my-5">
  <div id="main" class="devise-1">
    <div class="col-12 col-md-6 mr-auto ml-auto mt-5">
      <div class="card">
        <div class="card-body">
          <div class="container">
            <%= form_for resource, as: resource_name, url: session_path(resource_name),
                html: { class: "form-horizontal" } do |f| %>
              <%- if devise_mapping.omniauthable? %>
                <p>
                  <%- resource_class.omniauth_providers.each do |provider| %>
                    <%= link_to fa_icon_tag("#{provider}-sign") + " Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: "btn" %>
                  <% end -%>
                </p>
                <p>Or sign in using your ...</p>
              <% end -%>
              <%= f.form_group :email, class: "row" do |f| %>
                <%= f.label :email, class: "form-label" %>
                <%= f.email_field :email, autofocus: true, class: "form-control" %>
                <%= f.error_messages %>
              <% end %>
              <%= f.form_group :password, class: "row" do |f| %>
                <%= f.label 'Mot de passe', class: "form-label" %>
                <%= f.password_field :password, class: "form-control" %>
                <%= f.error_messages %>
              <% end %>
              <% if devise_mapping.rememberable? %>
                <div class="d-flex align-items-center">
                  <div class="checkbox m-0 mr-auto">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, "Se souvenir de moi", class: "checkbox m-0 mr-auto" %>
                  </div>
                  <%= f.submit "Se connecter", class: "btn btn-primary" %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <ul class="list-unstyled options row">
        <li class="col-12 col-md-6"><%= link_to "S'inscrire", new_registration_path(resource_name) %></li>
        <%- if devise_mapping.recoverable? %>
          <li class="col-12 col-md-6"><%= link_to "Mot de passe oublié ?", new_password_path(resource_name) %></li>
        <% end -%>
        <%- if devise_mapping.confirmable? %>
          <li class="col-12 col-md-6"><%= link_to "Vous n'avez pas reçu d'instructions de confirmation ?", new_confirmation_path(resource_name) %></li>
        <% end -%>
        <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) %>
          <li class="col-12 col-md-6"><%= link_to "Vous n'avez pas reçu d'instructions de déverrouillage ?", new_unlock_path(resource_name) %></li>
        <% end -%>
      </ul>
    </div>
  </div>
</div>
