<% @title = "Agrandissez la communautÃ©" %>
<div class="container-fluid">
  <div class="row">
    <div class="col-12 col-md-9 mr-auto ml-auto">
      <div class="card">
        <div class="card-body">
          <div class="container">
            <%= form_for resource, as: resource_name, url: invitation_path(resource_name),
                html: { class: "form-horizontal", novalidate: true } do |f| %>
              <% resource.class.invite_key_fields.each do |field| %>
                <%= f.form_group field, class: "row" do |f| %>
                  <%= f.label field, class: "form-label" %>
                  <%= f.text_field field, autofocus: true, class: "form-control"  %>
                  <%= f.error_messages %>
                <% end %>
              <% end %>
              <div class="row d-flex align-items-center mt-5">
                <%= f.submit "Inviter", class: "btn btn-primary ml-auto" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-md-9 mr-auto ml-auto">
      <%= image_tag image_path('devise/invitation.png'), width: 1000 %>
    </div>
  </div>
</div>
