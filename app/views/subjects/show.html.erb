<% @title = @subject.name %>
<%# content_for :description do
  <p>Edit this template in <code>app/views/Groups/show.html.erb</code>.</p>
end %>
<div class="container">
  <div class="row">
    <%# Search form %>
    <%= render partial: 'search/form', locals: { search_path: subject_path(@subject), placeholder: "Recherchez un cours dans cette matière et trouvez du contenu à ce sujet." } %>
    <div class="col-12">
      <%# Breadcrumb %>
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <%= link_to 'Matières', subjects_path %>
        </li>
        <li class="breadcrumb-item">
          <%= link_to @subject.name, subject_path(@subject) %>
        </li>
      </ol>
      <%# Card %>
      <div class="card">
        <%# Card header %>
        <div class="card-header">
          <%# Render subject's posts %>
          <% if @search.present? %>
            <h6 class="card-title">Vous avez recherché : <i><%= @search %></i></h6>
          <% else %>
            <h6 class="card-title">Publications les plus populaires</h6>
          <% end %>
        </div>
        <table class="table table-hover">
          <tbody>
            <% if @search.present? %>
              <% @posts.each do |post| %>
                <%= render partial: 'tables/tr-post', locals: { post: post } %>
              <% end %>
            <% else %>
              <% @posts.each do |post| %>
                <%= render partial: 'tables/tr-post', locals: { post: post } %>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <%# Pagination %>
  <% if @subject.posts.count > 20 %>
    <%= render partial: 'kaminari/pagination', locals: { object: @posts, ajax: 'local' } %>
  <% end %>
</div>
