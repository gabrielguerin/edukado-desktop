<% @title = "Quelle matière recherchez-vous ?" %>
<%# content_for :description do
  <p>Rechercher une université et trouver du contenu pour celle-ci.</p>
end %>
<div class="container">
  <div class="row">
    <div class="card">
      <%= form_tag(subjects_path, method: 'get', class: 'input-group input-group-lg', role: 'search') do %>
        <%# Search field %>
        <%= text_field_tag :search, nil, placeholder: "Rechercher une matière et trouver du contenu pour celle-ci.", class: "form-control border-0", name: "search", autocomplete: :off%>
        <%# Submit button %>
        <%= submit_tag '', style: "display: none;" %>
      <% end %>
    </div>
    <div class="col-12">
      <%# Breadcrumb %>
      <ol class="breadcrumb">
        <li class="breadcrumb-item <%= 'active' if current_page?(groups_path) %>">
          <%= link_to 'Matières', subjects_path %>
        </li>
      </ol>
      <%# Groups %>
      <div class="card">
        <div class="card-header">
          <% if @search.present? %>
            <h6 class="card-title">Vous avez recherché : <i><%= @search %></i></h6>
          <% else %>
            <h6 class="card-title">Toutes les matières</h6>
          <% end %>
        </div>
        <table class="table table-hover inspectable">
          <tbody>
            <% if @search.present? %>
              <% @subjects.each do |subject| %>
                <%= render partial: 'subjects/subject', locals: { subject: subject } %>
              <% end %>
            <% else %>
              <%= render @subjects %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <%# Pagination %>
  <div class="card">
    <div class="card-body d-flex justify-content-center" id="paginate">
      <%= paginate @subjects %>
    </div>
  </div>
</div>
<%# Clickable table row element %>
<script>
  $("tr[data-link]").click(function() {
    window.location = $(this).data("link")
  })
</script>
