<% @title = "Quelle matière recherchez-vous ?" %>
<%# content_for :description do
  <p>Rechercher une université et trouver du contenu pour celle-ci.</p>
end %>
<div class="container">
  <div class="row">
    <%# Search form %>
    <%= render partial: 'search/form', locals: { search_path: subjects_path, placeholder: "Rechercher une matière et trouver du contenu pour celle-ci." } %>
    <div class="col-12">
      <%# Breadcrumb %>
      <ol class="breadcrumb">
        <li class="breadcrumb-item <%= 'active' if current_page?(groups_path) %>">
          <%= link_to 'Matières', subjects_path %>
        </li>
      </ol>
      <%# Groups %>
      <div class="card">
        <div class="card-header">
          <% if @search.present? %>
            <h6 class="card-title">Vous avez recherché : <i><%= @search %></i></h6>
          <% else %>
            <h6 class="card-title">Toutes les matières</h6>
          <% end %>
        </div>
        <table class="table table-hover">
          <tbody>
            <%# Render subjects %>
            <% @subjects.each do |subject| %>
              <%= render partial: 'table/tr-object', locals: { attribute: subject.name, icon: 'book', path: subject_path(subject) } %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <%# Pagination %>
  <%= render partial: 'kaminari/pagination', locals: { object: @subjects, ajax: 'local' } %>
</div>
<%# Clickable table row element %>
<script>
  $("tr[data-link]").click(function() {
    window.location = $(this).data("link")
  })
</script>
